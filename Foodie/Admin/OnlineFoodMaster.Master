<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="OnlineFoodMaster.master.cs" Inherits="resturant.OnlineFoodMaster" %>

<!DOCTYPE html>

<html>
<head runat="server">
    
    <title>Online Food Ordering System </title>
     <link href="../css/admin.css" rel="stylesheet" type="text/css" />
