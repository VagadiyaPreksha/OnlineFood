                    <!-- Profile Info -->
                    <div class="profile_info">
                        <div class="profile_img">
<%--                            <img src="../img/admin_logo.png" alt="Admin Logo">--%>
                        </div>
                        <div class="profile_data">
                            <p class="name">Admin</p>
                        </div>
                    </div>

                    <!-- Sidebar Menu -->
                   <ul class="sidebar_menu">
    <li>
        <a href="Dashboard.aspx">
